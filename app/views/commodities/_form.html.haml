= form_for @commodity, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .form-actions
    = f.submit t('activerecord.attributes.commodity.create'), :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), commodities_path, :class => 'btn'
