- model_class = Commodity
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @commodity.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), commodities_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_commodity_path(@commodity), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), commodity_path(@commodity), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
