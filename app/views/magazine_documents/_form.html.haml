= form_for @magazine_document, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :supplier_id, :class => 'control-label'
    .controls
      = f.collection_select :supplier_id, Supplier.all, :id, :description, :class => 'text_field'
      = link_to t('new_supplier'), new_supplier_path, class: 'btn'
  .control-group
    = f.label :commodity_id, :class => 'control-label'
    .controls
      = f.collection_select :commodity_id, Commodity.all, :id, :name, :class => 'text_field'
  .control-group
    = f.label :quanity, :class => 'control-label'
    .controls
      = f.text_field :quanity, :class => 'text_field'
  .control-group
    = f.label :date, :class => 'control-label'
    .controls
      = f.date_select :date, :class => 'text_field'
  .control-group
    = f.label :current_number, :class => 'control-label'
    .controls
      = f.text_field :current_number, value: current_number, :class => 'text_field'
  .control-group
    = f.label :humidity, :class => 'control-label'
    .controls
      = f.text_field :humidity, :class => 'text_field'
  .control-group
    = f.label :contamination, :class => 'control-label'
    .controls
      = f.text_field :contamination, :class => 'text_field'
  .control-group
    = f.label :type, :class => 'control-label'
    .controls
      = f.select :type, MagazineDocument::TYPES, :class => 'text_field'
  .control-group
    = f.label :vehicle_number, :class => 'control-label'
    .controls
      = f.text_field :vehicle_number, :class => 'text_field'
  .control-group
    = f.label :symbol_of_evidence, :class => 'control-label'
    .controls
      = f.text_field :symbol_of_evidence, :class => 'text_field'
  .control-group
    = f.label :prof_of_delivery, :class => 'control-label'
    .controls
      = f.text_field :prof_of_delivery, :class => 'text_field'
  .control-group
    = f.label :no, :class => 'control-label'
    .controls
      = f.text_field :no, :class => 'text_field'
  .control-group
    = f.label :destination, :class => 'control-label'
    .controls
      = f.text_field :destination, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), magazine_documents_path, :class => 'btn'
