= form_for @supplier, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :first_name, :class => 'control-label'
    .controls
      = f.text_field :first_name, :class => 'text_field'
  .control-group
    = f.label :last_name, :class => 'control-label'
    .controls
      = f.text_field :last_name, :class => 'text_field'
  .control-group
    = f.label :from, :class => 'control-label'
    .controls
      = f.text_field :from, :class => 'text_field'
  .form-actions
    = f.submit t('activerecord.attributes.supplier.create'), :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), suppliers_path, :class => 'btn'
